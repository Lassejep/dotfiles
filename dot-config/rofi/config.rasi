configuration {
    modi:                       "drun,run";
    font:                       "Fira Sans Bold 12";
    show-icons:                 true;
    icon-theme:                 "kora";
    display-drun:               "APPS";
    display-run:                "RUN";
    display-filebrowser:        "FILES";
    display-window:             "WINDOW";
	drun-display-format:        "{name}";
    hover-select:               true;
    me-select-entry:            "";
    me-accept-entry:            "MousePrimary";
    window-format:              "{w} · {c} · {t}";
    
}

* {
	base:			  #1e1e2e;
	text:			  #cdd6f4;
	lavender:		  #b4befe;
	mauve:			  #cba6f7;
}

window {
    width:                        900px;
    x-offset:                     0px;
    y-offset:                     0px;
    spacing:                      0px;
    padding:                      0px;
    margin:                       0px; 
    color:                        @lavender;
    border:                       3px;
    border-color:                 @lavender;
    cursor:                       "default";
    transparency:                 "real";
    location:                     center;
    anchor:                       center;
    fullscreen:                   false;
    enabled:                      true;
    border-radius:                10px;
    background-color:             transparent;
}

mainbox {
    enabled:                      true;
    orientation:                  horizontal;
    spacing:                      0px;
    margin:                       0px;
    background-color:             @base;
    background-image:             url("~/.cache/wallpaper.png", height);
    children:                     ["imagebox","listbox"];
}

imagebox {
    padding:                      18px;
    background-color:             transparent;
    orientation:                  vertical;
    children:                     [ "inputbar", "dummy", "mode-switcher" ];
}

listbox {
    spacing:                     20px;
    background-color:            transparent;
    orientation:                 vertical;
    children:                    [ "message", "listview" ];
}

dummy {
    background-color:            transparent;
}

inputbar {
    enabled:                      true;
    text-color:                   @text;
    spacing:                      10px;
    padding:                      15px;
    border-radius:                10px;
    border-color:                 @text;
    background-color:             @base;
    children:                     [ "textbox-prompt-colon", "entry" ];
}

textbox-prompt-colon {
    enabled:                      true;
    expand:                       false;
    str:                          " ";
    background-color:             transparent;
    text-color:                   inherit;
}

entry {
    enabled:                      true;
    background-color:             transparent;
    text-color:                   inherit;
    cursor:                       text;
    placeholder:                  "Search";
    placeholder-color:            inherit;
}

mode-switcher{
    enabled:                      true;
    spacing:                      20px;
    background-color:             transparent;
    text-color:                   @text;
}

button {
    padding:                      10px;
    border-radius:                10px;
    background-color:             @base;
    text-color:                   inherit;
    cursor:                       pointer;
    border:                       0px;
}

button selected {
    background-color:             @mauve;
    text-color:                   @text;
}

listview {
    enabled:                      true;
    columns:                      1;
    lines:                        8;
    cycle:                        true;
    dynamic:                      true;
    scrollbar:                    false;
    layout:                       vertical;
    reverse:                      false;
    fixed-height:                 true;
    fixed-columns:                true;
    spacing:                      0px;
    padding:                      10px;
    margin:                       0px;
    background-color:             @base;
    border:0px;
}

element {
    enabled:                      true;
    padding:                      10px;
    margin:                       5px;
    cursor:                       pointer;
    background-color:             @base;
    border-radius:                10px;
    border:                       2px;
    border-color:                 @lavender;
}

element normal.normal {
    background-color:            inherit;
    text-color:                  @text;
}

element normal.urgent {
    background-color:            inherit;
    text-color:                  @text;
}

element normal.active {
    background-color:            inherit;
    text-color:                  @text;
}

element selected.normal {
    background-color:            @mauve;
    text-color:                  @text;
}

element selected.urgent {
    background-color:            inherit;
    text-color:                  @text;
}

element selected.active {
    background-color:            inherit;
    text-color:                  @text;
}

element alternate.normal {
    background-color:            inherit;
    text-color:                  @text;
}

element alternate.urgent {
    background-color:            inherit;
    text-color:                  @text;
}

element alternate.active {
    background-color:            inherit;
    text-color:                  @text;
}

element-icon {
    background-color:            transparent;
    text-color:                  inherit;
    size:                        32px;
    cursor:                      inherit;
}

element-text {
    background-color:            transparent;
    text-color:                  inherit;
    cursor:                      inherit;
    vertical-align:              0.5;
    horizontal-align:            0.0;
}

message {
    background-color:            transparent;
    border:0px;
    margin:20px 0px 0px 0px;
    padding:0px;
    spacing:0px;
    border-radius: 10px;
}

textbox {
    padding:                     15px;
    margin:                      0px;
    border-radius:               0px;
    background-color:            @base;
    text-color:                  @text;
    vertical-align:              0.5;
    horizontal-align:            0.0;
}

error-message {
    padding:                     15px;
    border-radius:               20px;
    background-color:            @base;
    text-color:                  @text;
}
